<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/background_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/f"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView_set1"
        android:layout_width="370dp"
        android:layout_height="70dp"
        android:text="检查更新"
        android:textSize="40dp"
        android:textColor="@color/color1"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/textView_set2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/textView_set2"
        android:layout_width="370dp"
        android:layout_height="70dp"
        android:text="数据回收站"
        android:textSize="40dp"
        android:textColor="@color/color1"
        android:layout_above="@+id/textView_set3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="66dp" />

    <TextView
        android:id="@+id/textView_set3"
        android:layout_width="370dp"
        android:layout_height="70dp"
        android:text="关于Sports"
        android:textSize="40dp"
        android:textColor="@color/color1"
        android:layout_above="@+id/button_set"
        android:layout_alignLeft="@+id/textView_set2"
        android:layout_alignStart="@+id/textView_set2"
        android:layout_marginBottom="48dp" />


    <Button
        android:id="@+id/button_set"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="退出"
        android:textSize="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp"
        android:background="@color/color5"/>

</RelativeLayout>